@model Fiap.Apostila09.Web.MVC.Models.Exame
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(e => e.Descricao)
        @Html.TextBoxFor(e => e.Descricao, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Data)
        @Html.TextBoxFor(e => e.Data, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Gravidade)
        @Html.TextBoxFor(e => e.Gravidade, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Preco)
        @Html.TextBoxFor(e => e.Preco, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}

