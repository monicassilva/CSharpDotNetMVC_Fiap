@model Fiap.Revisao.MVC.Web.Models.Avaliacao
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Avaliação</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(a => a.Tema)
        @Html.TextBoxFor(a => a.Tema, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Data)
        @Html.TextBoxFor(a => a.Data, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Disciplina)
        @Html.DropDownListFor(a => a.DisciplinaId ,
            ViewBag.disciplinas as SelectList,
            new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(a => a.Sistema)
        @Html.LabelFor(a => a.Sistema)
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}
