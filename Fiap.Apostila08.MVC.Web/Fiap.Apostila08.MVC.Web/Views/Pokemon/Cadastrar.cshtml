@model Fiap.Apostila08.MVC.Web.Models.Pokemon
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Capturar Pokemon</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Nome)
        @Html.TextBoxFor(p => p.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Cp)
        @Html.TextBoxFor(p => p.Cp, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Treinador)
        @Html.DropDownListFor(p => p.TreinadorId ,
            ViewBag.treinadores as SelectList,
            "Selecione", new { @class = "form-control"})
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}

